@model Task_Mangement.Models.DailyTaskViewModel

<form method-post asp-action="SaveUpdateDailyTask">
	<div class="border p-3">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		@if (Model.Id > 0)
		{
			<div class="form-group row">
				<h2 class="text-info pl-3">Edit Daily Task</h2>
			</div>
		}
		else
		{
			<div class="form-group row">
				<h2 class="text-info pl-3">Add Daily Task</h2>
			</div>
		}
		<input id="Id" name="Id" type="hidden" class="form-control col-sm-4" value="@Model.Id" />
		<div class="row">
			<div class="col-8">
				<div class="form-group row">
					<div class="col-4">
						@Html.Label("Project Name")
					</div>
					@if (ViewBag.ProjectList != null && ViewBag.ProjectList.Count > 0)
					{
						<div class="col-8">
							@Html.DropDownListFor(x => x.ProjectId, new SelectList(ViewBag.ProjectList, "Value", "Text", Model.ProjectId), new { @class = "form-select", @aria_label = "Default select example", @required = "required" })
						</div>
					}
					else
					{
						<div class="col-8">
							@Html.DropDownListFor(x => x.ProjectId, new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"), new { @class = "form-select", @aria_label = "Default select example", @required = "required" })
						</div>
					}

				</div>
				<br />
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="TaskDate"></label>
					</div>
					<div class="col-8">
						<input asp-for="TaskDate" class="form-control" type="date" required/>
						<span asp-validation-for="TaskDate" class="alert-danger"></span>
					</div>
				</div>
				<br />
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="TaskDuration"></label>
					</div>
					<div class="col-8">
						<input asp-for="TaskDuration" class="form-control" required />
						<span asp-validation-for="TaskDuration" class="text-danger"></span>
					</div>
				</div>
				<br />
				
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="TaskDescription"></label>
					</div>
					<div class="col-8">
						<textarea asp-for="TaskDescription" class="form-control" required></textarea>
						<span asp-validation-for="TaskDescription" class="text-danger"></span>
					</div>
				</div>

				<br />
				 <div class="form-group row">
                    <div class="col-4">
                        @Html.Label("Task Status")
                    </div>
                    <div class="col-8">
						@Html.DropDownListFor(x => x.TaskStatus, new SelectList(ViewBag.TaskStatusList, "Value", "Text"), htmlAttributes: new { @class = "form-select", @aria_label = "Default select example", @required = "required" })
                    </div>
                </div>
				<br />
				<div class="form-group row">
					<div class="col-8 offset-4 row">
						<div class="col">
							<input type="submit" class="btn btn-info w-40" value="submit" />
							@*  </div>

                            <div class="col">*@
							<a asp-action="DailyTask" class="btn btn-primary w-40">
								<i class="fa-solid fa-arrow-right-to-bracket"></i> &nbsp;  Back
							</a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-4">
			</div>
			<div>
				<div style="color:red;">@ViewBag.message</div>
			</div>
		</div>
	</div>

</form>

@section scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
