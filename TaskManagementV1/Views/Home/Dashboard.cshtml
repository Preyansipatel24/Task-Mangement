@using TaskManagementV1.Models.ResponseModels

@{
    ViewBag.PageTitle = "Dashboard";
    List<GetTaskListResModel> TodayTaskList = new List<GetTaskListResModel>();
    List<GetTaskListResModel> YesterdayTaskList = new List<GetTaskListResModel>();
    List<GetTaskListResModel> AllTaskList = new List<GetTaskListResModel>();
    var PermissionList = Context.Session.GetObjectFromSession<List<ActionDetailsList>>("PermissionList");
    var UserDetail = Context.Session.GetObjectFromSession<UserInfoDetail>("UserDetail");
    int ProjectCount = 0;
    int ColumnCount = 0;
    List<ProjectDetailResModel> ProjectList = new List<ProjectDetailResModel>();

    if (Model.Status)
    {
        DashboardResModel resModel = Model.Data;
        List<GetTaskListResModel> TaskList = resModel.TaskList;
        AllTaskList = TaskList;
        TodayTaskList = TaskList.Where(x => x.UserId == UserDetail.Id && x.TaskDate.Date == DateTime.Today.Date).ToList();
        YesterdayTaskList = TaskList.Where(x => x.UserId == UserDetail.Id && x.TaskDate.Date == DateTime.Today.Date.AddDays(-1)).ToList();
        ProjectList = resModel.ProjectList.Take(20).ToList();
        ProjectCount = resModel.ProjectList.Count();
    }
    TimeSpan TodayTotalHour = TodayTaskList.Count > 0 ? TodayTaskList.Select(x => TimeSpan.Parse(x.TaskDuration)).Aggregate((total, next) => total.Add(next)) : new TimeSpan();
    TimeSpan YesterdayTotalHour = YesterdayTaskList.Count > 0 ? YesterdayTaskList.Select(x => TimeSpan.Parse(x.TaskDuration)).Aggregate((total, next) => total.Add(next)) : new TimeSpan();
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container">

        @if (PermissionList != null && PermissionList.Any(x => x.ActionCode == CommonConstant.Task_Dashboard_View))
        {
            <div class="row">
                @foreach (var item in ProjectList)
                {
                    <div class="col-lg-3 col-6">
                        @{
                            var ProjectTaskList = AllTaskList.Where(x => x.ProjectId == item.Id).ToList();
                            string ProjectTotalHourStr = "00:00";
                        }
                        <!-- small box -->
                        <div class="small-box bg-info">
                            <div class="inner">
                                <h3>@item.ProjectName</h3>
                                @if (ProjectTaskList.Count() > 0)
                                {
                                    ProjectTotalHourStr = ProjectTaskList.Select(x => TimeSpan.Parse(x.TaskDuration)).Aggregate((total, next) => total.Add(next)).ToString(@"hh\:mm");
                                }
                                <p>Total Task Duration : @ProjectTotalHourStr</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-bag"></i>
                            </div>
                            @if (ProjectTaskList.Count() > 0)
                            {
                                <a href="/Task/GetTaskDetailList?ProjectId=@item.Id" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                            }
                            else
                            {
                                <a href="#" class="small-box-footer bg-secondary" onclick="return false;">More info <i class="fas fa-arrow-circle-right"></i></a>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <div class="row">
            <div class="col-md-12">
                @if (TodayTotalHour.TotalHours >= 8)
                {
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">
                                Today's Task
                            </h3>
                            <h3 class="card-title float-right">
                                <span class="badge badge-light"> Total @TodayTotalHour.ToString(@"hh\:mm") Hours </span>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            @foreach (var item in TodayTaskList)
                            {
                                <div class="callout callout-success">
                                    <h5 class="float-right">@item.TaskDuration hours in <span class="badge badge-light"> @item.ProjectName </span></h5>
                                    <p>@item.TaskDescription</p>
                                </div>
                            }
                        </div>
                        <!-- /.card-body -->
                    </div>
                }
                else if (TodayTotalHour.TotalHours < 5)
                {
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">
                                Today's Task
                            </h3>
                            <h3 class="card-title float-right">
                                <span class="badge badge-light"> Total @TodayTotalHour.ToString(@"hh\:mm") Hours </span>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            @foreach (var item in TodayTaskList)
                            {
                                <div class="callout callout-success">
                                    <h5 class="float-right">@item.TaskDuration hours in <span class="badge badge-light"> @item.ProjectName </span></h5>
                                    <p>@item.TaskDescription</p>
                                </div>
                            }
                        </div>
                        <!-- /.card-body -->
                    </div>
                }
                else
                {
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">
                                Today's Task
                            </h3>
                            <h3 class="card-title float-right">
                                <span class="badge badge-light"> Total @TodayTotalHour.ToString(@"hh\:mm") Hours </span>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            @foreach (var item in TodayTaskList)
                            {
                                <div class="callout callout-success">
                                    <h5 class="float-right">@item.TaskDuration hours in <span class="badge badge-light"> @item.ProjectName </span></h5>
                                    <p>@item.TaskDescription</p>
                                </div>
                            }
                        </div>
                        <!-- /.card-body -->
                    </div>
                }

                <!-- /.card -->
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                @if (YesterdayTotalHour.TotalHours >= 8)
                {
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">
                                Yesterday's Task
                            </h3>
                            <h3 class="card-title float-right">
                                <span class="badge badge-light"> Total @YesterdayTotalHour.ToString(@"hh\:mm") Hours</span>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            @foreach (var item in YesterdayTaskList)
                            {
                                <div class="callout callout-success">
                                    <h5 class="float-right">@item.TaskDuration hours in <span class="badge badge-light"> @item.ProjectName </span></h5>
                                    <p>@item.TaskDescription</p>
                                </div>
                            }
                        </div>
                        <!-- /.card-body -->
                    </div>
                }
                else if (YesterdayTotalHour.TotalHours < 5)
                {
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">
                                Yesterday's Task
                            </h3>
                            <h3 class="card-title float-right">
                                <span class="badge badge-light"> Total @YesterdayTotalHour.ToString(@"hh\:mm") Hours</span>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            @foreach (var item in YesterdayTaskList)
                            {
                                <div class="callout callout-success">
                                    <h5 class="float-right">@item.TaskDuration hours in <span class="badge badge-light"> @item.ProjectName </span></h5>
                                    <p>@item.TaskDescription</p>
                                </div>
                            }
                        </div>
                        <!-- /.card-body -->
                    </div>
                }
                else
                {
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">
                                Yesterday's Task
                            </h3>
                            <h3 class="card-title float-right">
                                <span class="badge badge-light"> Total @YesterdayTotalHour.ToString(@"hh\:mm") Hours</span>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            @foreach (var item in YesterdayTaskList)
                            {
                                <div class="callout callout-success">
                                    <h5 class="float-right">@item.TaskDuration hours in <span class="badge badge-light"> @item.ProjectName </span></h5>
                                    <p>@item.TaskDescription</p>
                                </div>
                            }
                        </div>
                        <!-- /.card-body -->
                    </div>
                }
                <!-- /.card -->
            </div>
        </div>

