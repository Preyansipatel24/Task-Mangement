@{
    ViewBag.dataTable = "true";
    string Title = "Project";
    string PageTitle = Title + " List";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@PageTitle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@Title</li>
                    <li class="breadcrumb-item active">@PageTitle</li>
                </ol>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6 card_title_center">
                                <h2 class="card-title"><b>@PageTitle</b></h2>
                            </div>
                            <div class="col-md-3">
                               @*  <div class="form-group" id="dddlProjectStatus">
                                    <label class="form-label"><span class="has-error required"></span>Status</label>
                                    <select id="ddlProjectStatus" name="ddlProjectStatus" class="form-control" isRequired="1" divcontainer="dddlProjectStatus" errorspan="sddlProjectStatus" defaultvalue="0">
                                    </select>
                                    <span class="help-block d-none has-error" id="sddlProjectStatus">Please Select Status</span>
                                </div> *@
                            </div>
                            <div class="col-md-3">
                                <button type="button" id="btnAddProject" name="btnAddProject" class="btn btn-primary float-right" title="Add @Title"><i class="fas fa-plus"></i> Add @Title</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @* <h6 class="card-title">Project List</h6> *@
                        <table id="tblProjectList" class="table table-bordered table-hover" style="width:100%;"></table>
                    </div>
                </div>
            </div>
        </div>

    </div><!-- /.container-fluid -->
</div>
<!-- /.content -->
@section Scripts
{
    <script src="~/scripts/project_index.js?_@DateTime.Now.Ticks"></script>
}
